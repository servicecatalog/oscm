  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-java2ws-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-wsProvisioning</id>
            <phase>generate-sources</phase>
            <configuration>
              <className>org.oscm.notification.intf.NotificationService</className>
              <outputFile>${basedir}/src/main/resources/wsdl/notification/NotificationService.wsdl</outputFile>
              <genWsdl>true</genWsdl>
              <verbose>true</verbose>
              <argline>-createxsdimports</argline>
            </configuration>
            <goals>
              <goal>java2ws</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
