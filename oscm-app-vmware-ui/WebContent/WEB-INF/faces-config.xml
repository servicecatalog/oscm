<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
          version="2.1">

  <managed-bean>
    <managed-bean-name>appBean</managed-bean-name>
    <managed-bean-class>org.oscm.app.vmware.ui.ApplicationBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
    <managed-bean>
    <managed-bean-name>configurationBean</managed-bean-name>
    <managed-bean-class>org.oscm.app.common.ui.ConfigurationBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <application>
    <locale-config>
      <default-locale>en</default-locale>
      <supported-locale>en</supported-locale>
      <supported-locale>de</supported-locale>
    </locale-config>
    
    <resource-bundle>
      <base-name>org.oscm.app.vmware.i18n.messages</base-name>
      <var>msg</var>
    </resource-bundle>
  </application>
  
</faces-config>
